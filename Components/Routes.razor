@using coursework.Components.Layout
<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeView">
        <RouteView RouteData="@routeView" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeView" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>You are in progress !!.</p>
        </LayoutView>
    </NotFound>
</Router>
